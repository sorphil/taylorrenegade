---
import Image from "astro/components/Image.astro";

const {orientation,title, subtitle, year, text1, text2, image1, image2} = Astro.props;

---
<section class ="about-row-container" style=`flex-direction:`>
    <div class="about-row-image-container">
        {image1  ? 
            <Image alt="" class="about-row-image" src={image1}/> :
            ""
            
        }
        {image2  ? 
            <img class="about-row-image" src={image2}/> :
            "" 
        }
        
    </div>
    <div class="about-row-text-container">
      
        <p class="about-row-text">
            {text1}
        </p>
        {text2 !== "" && (
            <p class="about-row-text">{text2}</p>
        )}
    </div>
</section>

<style>
    .about-row-container
    {
        display: flex;
        justify-content: space-between;
        padding:2rem 0 2rem 0;
        width: 70rem;


    }
    .about-row-image-container
    {
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
    }
    .about-row-image
    {
        width:32.5rem;
        height: auto;
        padding: 1rem 0 1rem 0;
    }

    .about-row-text-container
    {

        font-size: 1.15rem;
        width:32.5rem;
        color:black;
        display:flex;
        align-items:center;
        flex-direction:column;
        justify-content:center;
     

    }
    @media only screen and (max-width: 500px) {
        .about-row-container
        {
            display: flex;
            
            justify-content: space-between;
            flex-direction: column;
            padding:2rem 0 2rem 0;
            width:100%;
            width:60rem;

        }
        .about-row-image
        {
            width:45rem;
            height: auto;
            padding: 1rem 2rem; 1rem 0;
        }
        .about-row-text-container
        {
            width:100%;
            font-size:2rem;
     
        }
    }
</style>
